<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="21:33 Sept. 15, 2014"/>

    <TextView
        android:id="@+id/text_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="10:39 Sept. 21, 2014"/>

    <TextView
        android:id="@+id/text_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:gravity="center_vertical"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="This is a very long note that should take at least two lines but still not ellipsize the text. Changed my mind. It should ellipsize the text!"/>

</LinearLayout>