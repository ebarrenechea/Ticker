<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_name"
        android:paddingTop="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingStart="@dimen/padding_medium"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Event name"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_medium"
        android:hint="@string/name"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:alpha="0"
        tools:text="Event name"/>

    <TextView
        android:id="@+id/text_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:hint="@string/tap_to_add_a_note"
        android:minLines="3"
        android:maxLines="3"
        android:gravity="top"
        android:layout_alignBaseline="@+id/edit_note"
        android:paddingTop="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingStart="@dimen/padding_medium"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="This is a note!!!"/>

    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:padding="@dimen/padding_medium"
        android:hint="@string/note"
        android:minLines="3"
        android:maxLines="3"
        android:gravity="top"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"
        android:alpha="0"
        tools:text="This is a note!!!"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_note"
        android:paddingTop="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingStart="@dimen/padding_medium"
        android:textAppearance="?android:attr/textAppearance"
        tools:text="Sept. 17, 2014"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_time"
        android:layout_marginTop="@dimen/padding_medium">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/no_history_found"
            android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>