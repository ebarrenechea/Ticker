<resources>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Base.CardView" parent="CardView.Light">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Ticker" parent="Base">
        <item name="colorPrimary">@color/ticker_primary</item>
        <item name="colorPrimaryDark">@color/ticker_primary_dark</item>
        <item name="colorAccent">@color/ticker_accent</item>

        <item name="colorControlHighlight">@color/ticker_accent</item>
        <item name="android:textColorLink">@color/ticker_accent</item>
    </style>

    <style name="Ticker.CardView" parent="Base.CardView"/>
</resources>
